<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="36dp">

    <TextView
        android:id="@+id/tv_search_detail_category"
        style="@style/TextAppearance.LionHeart.Body4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/shape_lion_red_line_2dp_rect"
        android:paddingHorizontal="8dp"
        android:paddingVertical="4dp"
        android:textColor="@color/lion_red"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="출산 직전" />

    <TextView
        android:id="@+id/tv_search_detail_title"
        style="@style/TextAppearance.LionHeart.Head2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="@id/tv_search_detail_category"
        app:layout_constraintTop_toBottomOf="@id/tv_search_detail_category"
        tools:text="출산 준비,\n불필요한 지출은 그만!" />

    <TextView
        android:id="@+id/tv_search_detail_subtitle"
        style="@style/TextAppearance.LionHeart.Body3_Regular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textColor="@color/gray_400"
        app:layout_constraintStart_toStartOf="@id/tv_search_detail_category"
        app:layout_constraintTop_toBottomOf="@id/tv_search_detail_title"
        tools:text="라이온하트가 전하는 예산 절약 노하우 대공개" />

</androidx.constraintlayout.widget.ConstraintLayout>