<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="component"
            type="com.lionheart.domain.entity.ArticleComponent" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingBottom="36dp"
        android:paddingHorizontal="20dp">

        <TextView
            android:id="@+id/tv_article_general_title_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="출산카드? 임신바우처를 알려드려요."
            android:textAppearance="@style/TextAppearance.LionHeart.Head3"
            android:textColor="@color/gray_900"
            android:text="@{component.content}"
            app:layout_constraintTop_toTopOf="parent"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>